<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_margin_4x"
    android:paddingLeft="@dimen/padding_margin_3x"
    android:paddingRight="@dimen/padding_margin_3x"
    android:paddingTop="@dimen/padding_margin_3x"
    tools:context="com.allonapps.talkytalk.ui.activity.SignUpActivity">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvUserName"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_large" />

</RelativeLayout>